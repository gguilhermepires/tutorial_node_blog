<%- include('../../partials/header.ejs')%>
<%- include('../../partials/homenavbar.ejs')%>

<body>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-success" href="/admin/users/create"> Criar uma novo usuário</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> Id</th>
                    <th> E-mail</th>
             
                    <th> Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=>{ %>
                    <tr>
                        <th> <%= user.id %></th>
                        <th> <%= user.email %></th>
                        <th> 
                            <a href="/admin/categories/edit/<%=user.id%>" class="btn btn-warning">Editar</a>
    
                            <form method="POST" action="/admin/categories/delete" style="display: inline;" onsubmit="confirmDelete(event,this)" >
                                <input type="hidden" name="id" value="<%=user.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr>
                <%}); %> 
            </tbody>
        </table>
    </div>
</body>

<%- include('../../partials/footer.ejs')%>